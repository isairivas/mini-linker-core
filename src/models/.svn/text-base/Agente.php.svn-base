<?php
class Model_Agente extends Lib_Mvc_Model {
	public function __construct(){
		parent::__construct('agentes', 'id');
	}
	
	public function getAgenteAleatorio(){
		$query = '  SELECT * '
				.' FROM agentes '
			    .'    ORDER BY RAND() '
			    .' LIMIT 0,1 '
			    .' ;';
		$db = $this->getDB();
		$result = $this->toArray($db->query($query));
		return $result[0];
	}
}

